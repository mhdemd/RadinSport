<ExampleBackdrop>:
    mgr1: img
    mgr2: acc_back
    mdBackdrop: mdBackdrop

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        MDToolbar:
            #size_hint_y: .15  
            title: 'Radin Sport'
            md_bg_color: gch('#1A237E')
            #height:80
            #elevation: 10
            left_action_items: [["menu", lambda x: app.root.collapse()]]
            right_action_items: [["dots-vertical", lambda x: x]]

        Accordion:

            min_space: "0dp"
            anim_func: "out_back"

            id:  mdBackdrop
            orientation: 'vertical'
            anim_duration: 1

            AccordionItem:
                id: acc_back
                #collapse: False
                title_template: "AccordionItemTitle1"
                MyBackdropBackLayer:

            AccordionItem:
                title_template: "AccordionItemTitle2"
                MyBackdropFrontLayer:
                    id: img

<MyBackdropFrontLayer>:
    transition: SwapTransition()
    id: sc_mng
    main: main
    main2: main2
    main3: main3
    sc: sc

    MDScreen:
        name: "one screen"
        BoxLayout:
            orientation: "vertical"

