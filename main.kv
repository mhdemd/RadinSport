            #smooth_scroll_end: 0

            BoxLayout:
                
                orientation: 'horizontal'
                size_hint_y: None
                height: self.minimum_height
                #spacing: "2dp"
                BoxLayout:
                    
                    orientation: 'vertical'
                    id: main
                    markup: True
                    size_hint_y: None
                    height: self.minimum_height
                    #spacing: "2dp"
                BoxLayout:
                    
                    orientation: 'vertical'
                    id: main2
                    markup: True
                    size_hint_y: None
                    height: self.minimum_height
                    #spacing: "2dp"
                BoxLayout:
                    
                    orientation: 'vertical'
                    id: main3
                    markup: True
