            size_hint_y: 0.94
            always_overscroll: False
            
            scroll_timeout: 2500
            scroll_distance: 2

            #do_scroll_x: False
            do_scroll_y: True
            id: sc
           
            
            #always_overscroll: False
            effect_cls: "ScrollEffect"
            #scroll_distance: "2000sp"
