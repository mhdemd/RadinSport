[AccordionItemTitle1@Label]:
    text: ""#get_display(arabic_reshaper.reshape("نمایش گروه های کالایی"))
    font_name: "DroidNaskh-Regular.ttf"
    size_hint: (1, None)
    height: "0dp"
    pos_hint: {"top" : 1}
    #size: (self.width, 1)
    canvas.before:
        Color:
            rgb: 26/255, 35/255, 126/255
        Rectangle:
            pos: self.pos
            size: self.size
        PushMatrix
        Translate:
            xy: self.center_x, self.center_y
        Rotate:
            angle: 90 if ctx.item.orientation == 'horizontal' else 0
            axis: 0, 0, 1
        Translate:
            xy: -self.center_x, -self.center_y
    canvas.after:
        PopMatrix

